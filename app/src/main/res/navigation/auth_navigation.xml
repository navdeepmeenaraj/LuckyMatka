<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="lucky.online.matka.app.ui.main.fragments.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_frogotPassword2"
            app:destination="@id/frogotPassword" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="lucky.online.matka.app.ui.main.fragments.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/frogotPassword"
        android:name="lucky.online.matka.app.ui.main.fragments.password.FrogotPassword"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password">
        <action
            android:id="@+id/action_frogotPassword_to_passwordNewFragment"
            app:destination="@id/passwordNewFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordNewFragment"
        android:name="lucky.online.matka.app.ui.main.fragments.password.PasswordNewFragment"
        android:label="fragment_password_new"
        tools:layout="@layout/fragment_password_new">
        <action
            android:id="@+id/action_passwordNewFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


</navigation>