<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#FFFEDF"
    app:cardCornerRadius="8dp"
    app:cardElevation="4sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="6dp">


        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/market_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semi"
                android:text="Open: 02 : 21 PM"
                android:textAllCaps="true"
                android:textColor="@color/open_time_green"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <xyz.peridy.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:shimmer_center_width="40dp"
                app:shimmer_width="50dp">

                <TextView
                    android:id="@+id/market_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:padding="8dp"
                    android:text="Madhur Morning"
                    android:textAllCaps="true"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </xyz.peridy.shimmerlayout.ShimmerLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/market_close_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semi"
                android:text="Close: 02 : 21 PM"
                android:textAllCaps="true"
                android:textColor="@color/close_time_red"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12">


            <ImageView
                android:id="@+id/chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/lucky_ic_chart_new"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/open_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:letterSpacing="0.3"
                    android:text="132"
                    android:textColor="@color/result_text_color"
                    android:textSize="@dimen/result_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/result_text_color"
                    android:textSize="@dimen/result_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/open_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:letterSpacing="0.3"
                    android:text="2"
                    android:textColor="@color/result_text_color"
                    android:textSize="@dimen/result_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/close_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:letterSpacing="0.3"
                    android:text="3"
                    android:textColor="@color/result_text_color"
                    android:textSize="@dimen/result_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/result_text_color"
                    android:textSize="@dimen/result_text"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/close_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:letterSpacing="0.3"
                    android:text="323"
                    android:textColor="@color/result_text_color"
                    android:textSize="@dimen/result_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/lucky_btnplaygreen"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />

                <TextView
                    android:id="@+id/market_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semi"
                    android:text="OPEN"
                    android:textAlignment="center"
                    android:textColor="@color/market_title_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/play_button"
                    app:layout_constraintTop_toBottomOf="@+id/play_button" />
            </LinearLayout>


            <TextView
                android:id="@+id/countdown_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/semi"
                android:paddingStart="8dp"
                android:paddingBottom="6dp"
                android:text="Time Left 00:00:00"
                android:textColor="#e84118"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>