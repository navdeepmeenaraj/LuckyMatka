<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lucky.online.matka.app.ui.main.fragments.bids.HalfSangamFragment">

    <TextView
        android:id="@+id/form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lucky_main_gradient"
        android:fontFamily="@font/medium"
        android:padding="8dp"
        android:text="Time Bazar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/form_title"
        tools:layout_editor_absoluteX="8dp">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/input_label_size" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/lucky_edit_background"
            android:fontFamily="@font/bold"
            android:padding="12sp"
            android:text="2021-07-11 12:00:00" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/regular"
            android:text="Choose Session"
            android:textColor="@color/black"
            android:textSize="@dimen/input_label_size" />


        <RadioGroup
            android:id="@+id/hsg_sessionRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12sp"
            android:paddingBottom="12sp">

            <RadioButton
                android:id="@+id/hsg_openCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15sp"
                android:layout_marginRight="15sp"
                android:checked="true"
                android:fontFamily="@font/regular"
                android:text="Open" />

            <RadioButton
                android:id="@+id/hsg_closeCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Close" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/hsg_one_cond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/regular"
                android:text="Open Panna"
                android:textColor="@color/black"
                android:textSize="@dimen/input_label_size" />

            <AutoCompleteTextView
                android:id="@+id/hsg_open_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/lucky_edit_background"
                android:fontFamily="@font/bold"
                android:inputType="number"
                android:maxLength="3"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/regular"
                android:text="Close Number"
                android:textColor="@color/black"
                android:textSize="@dimen/input_label_size" />

            <AutoCompleteTextView
                android:id="@+id/hsg_close_digit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/lucky_edit_background"
                android:fontFamily="@font/bold"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hsg_two_cond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Close Panel"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/hsg_close_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/lucky_edit_background"
                android:hint="Enter Close Panel"
                android:inputType="number"
                android:maxLength="3"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Open Digit"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/hsg_open_digit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/lucky_edit_background"
                android:hint="Enter Open Digit"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/regular"
            android:text="@string/bid_points_input_title"
            android:textColor="@color/black"
            android:textSize="@dimen/input_label_size" />

        <EditText
            android:id="@+id/hsg_edit_input_points"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/lucky_edit_background"
            android:fontFamily="@font/bold"
            android:inputType="number"
            android:maxLength="5"
            android:padding="12dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubmitBid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semi"
            android:padding="12dp"
            android:text="Submit"
            app:cornerRadius="12dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>