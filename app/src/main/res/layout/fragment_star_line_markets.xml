<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lucky.online.matka.app.ui.main.fragments.starline.StarLineMarkets">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/star_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/lucky_single" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/star_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/lucky_sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/star_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/star_single"
            app:layout_constraintTop_toBottomOf="@+id/star_sp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/lucky_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/star_tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/star_sp"
            app:layout_constraintTop_toBottomOf="@+id/star_sp">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/lucky_tp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>