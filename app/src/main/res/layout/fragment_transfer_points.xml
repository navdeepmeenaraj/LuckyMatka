<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragments.TransferPointsFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_image">

        <EditText
            android:id="@+id/transfer_number"
            android:layout_width="match_parent"
            android:background="@drawable/lucky_edit_background"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="@font/semi"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10" />


        <TextView
            android:id="@+id/verified_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:padding="4dp"
            android:text="User Name"
            android:textColor="@color/colorGreen"
            android:visibility="gone" />


        <EditText
            android:id="@+id/transfer_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lucky_edit_background"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/semi"
            android:hint="Enter Points"
            android:inputType="number"
            android:maxLength="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/lucky_button_gradients"
            android:fontFamily="@font/semi"
            android:text="Verify Number"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/transfer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/lucky_button_gradients"
            android:fontFamily="@font/bold"
            android:text="Transfer"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>