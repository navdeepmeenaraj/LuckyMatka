<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lucky.online.matka.app.ui.main.fragments.WFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_withdraw_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Request Withdraw points"
                    app:icon="@drawable/lucky_ic_minus"
                    app:iconPadding="8sp"
                    app:iconTint="@null" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deposit_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Deposit via Whatsapp"
                    app:icon="@drawable/lucky_ic_plus"
                    app:iconPadding="8sp"
                    app:iconTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Deposit via UPI"
                    app:icon="@drawable/lucky_ic_up_i"
                    app:iconPadding="8sp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lucky_main_gradient"
        android:padding="12dp"
        android:text="@string/wallet_note"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

</FrameLayout>