<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/lucky_btnbackground">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/lucky_phonepe" />

    </FrameLayout>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_phonepay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:background="@drawable/lucky_edit_background"
        android:hint="Enter Phone Pay Number"
        android:inputType="number"
        android:maxLength="10"
        android:padding="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit_phonepay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="@font/medium"
        android:textColor="@color/white"
        android:background="@drawable/lucky_market_bg"
        android:padding="14dp"
        android:text="Submit"
        app:cornerRadius="12dp" />

</LinearLayout>