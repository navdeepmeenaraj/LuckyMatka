<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/golden</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomMenuItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/lucky_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


</resources>
